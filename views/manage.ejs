<!DOCTYPE html>
<html>
<head>
    <title>Manage Requests</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">관리</h1>
        <ul id="song-list" class="list-group">
            <% songs.forEach(song => { %>
                <li id="song-<%= song.id %>" class="list-group-item d-flex justify-content-between align-items-center <%= song.archived ? 'archived' : '' %>">
                    <span class="<%= song.completed ? 'completed' : '' %>"><%= song.song %></span>
                    <span class="song-requester"><i><%= song.name %></i></span>
                    <div>
                        <% if (!song.archived) { %>
                            <% if (song.completed) { %>
                                <form action="/manage/uncomplete/<%= song.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-warning btn-sm">복원</button>
                                </form>
                            <% } else { %>
                                <form action="/manage/complete/<%= song.id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-success btn-sm">완료</button>
                                </form>
                            <% } %>
                            <form action="/manage/archive/<%= song.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">빼기</button>
                            </form>
                        <% } else { %>
                            <form action="/manage/unarchive/<%= song.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-secondary btn-sm">넣기</button>
                            </form>
                        <% } %>
                    </div>
                </li>
            <% }) %>
        </ul>
        <div class="text-center my-4">
            <a href="/" class="btn btn-primary">메인 페이지로</a>
        </div>
        <div class="text-center my-4">
            <form action="/manage/reset" method="POST" style="display:inline;" onsubmit="return confirmReset()">
                <button type="submit" class="btn btn-danger">Reset Database</button>
            </form>
            <a href="/manage/backup" class="btn btn-secondary">Backup Database</a>
            <form action="/manage/restore" method="POST" enctype="multipart/form-data" style="display:inline;">
                <input type="file" name="backup" style="display:inline-block;">
                <button type="submit" class="btn btn-info">Restore Database</button>
            </form>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        function confirmReset() {
            return confirm('Are you sure you want to reset the database? This action cannot be undone.');
        }

        var socket = io();
        socket.on('songRequest', function(song) {
            var li = document.createElement('li');
            li.className = 'list-group-item d-flex justify-content-between align-items-center';
            li.innerHTML = '<span class="' + (song.completed ? 'completed' : '') + '">' + song.song + '</span>' +
                '<span class="song-requester"><i>' + song.name + '</i></span>' +
                '<div>' +
                '<form action="/manage/complete/' + song.id + '" method="POST" style="display:inline;">' +
                '<button type="submit" class="btn btn-success btn-sm">Complete</button>' +
                '</form>' +
                '<form action="/manage/archive/' + song.id + '" method="POST" style="display:inline;">' +
                '<button type="submit" class="btn btn-danger btn-sm">Archive</button>' +
                '</form>' +
                '</div>';
            li.id = 'song-' + song.id;
            document.getElementById('song-list').appendChild(li);
        });
        socket.on('songComplete', function(id) {
            var li = document.getElementById('song-' + id);
            if (li) li.querySelector('span').classList.add('completed');
        });
        socket.on('songUncomplete', function(id) {
            var li = document.getElementById('song-' + id);
            if (li) li.querySelector('span').classList.remove('completed');
        });
        socket.on('songArchive', function(id) {
            var li = document.getElementById('song-' + id);
            if (li) li.classList.add('archived');
        });
        socket.on('songUnarchive', function(id) {
            var li = document.getElementById('song-' + id);
            if (li) li.classList.remove('archived');
        });
        socket.on('reset', function() {
            location.reload();  // 페이지를 새로고침하여 리셋된 데이터 반영
        });
    </script>
</body>
</html>
